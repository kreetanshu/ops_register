<h3>Overrall Customer Stats</h3>
 <table class="table table-hover table-condensed"> <thead>
      <tr>
      	
        <th>Customer</th>
        <th>Money Collected</th>
        <th>No of Requests</th>
        <th>First Request</th>
        <th>Type</th>
      </tr>
        </thead>
        <tbody> 
        <% @dataviewscust.each do |post| %>   
       <tr>
         <td><%= link_to post.cooklist, "#"%></td>
         
         <td><%=post.total_price%></td>
         <td><%=post.no_of_requests%></td>
         <% sid=Dataview.where(:customer_id => post.customer_id).first %>
         <td><%= sid.created_at %></td>
         <td><%= post.typere %></td>
      </tr><% end %></tbody></table>
</br></br>
<h3> Current Month Customers</h3>
<table class="table table-hover table-condensed"> <thead>
      <tr>
        
        <th>Cook</th>
        <th>Money Collected</th>
        <th>No of Requests</th>
        <th>First Request</th>
        <th>Type</th>
      </tr>
        </thead>
        <tbody> 
        <% @dataviewscust.each do |post| %>  
        <%if post.created_at.month == Date.today.month %> 
       <tr>
         <td><%= link_to post.cooklist,"#"%></td>
         
         <td><%=post.total_price%></td>
         <td><%=post.no_of_requests%></td>
         <% sid=Dataview.where(:customer_id => post.customer_id).first %>
         <td><%= sid.created_at %></td>
         <td><%= post.typere %></td>
      </tr><% end %>
<%end%>
    </tbody></table>
