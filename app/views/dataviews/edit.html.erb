<h1>Edit Record</h1>
 <% if @dataviews.errors.any? %>
  <div>
    <div>
      The form contains <%= pluralize(@dataviews.errors.count, "error") %>.
    </div>
    <ul>
    <% @dataviews.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@dataviews) do |f| %>
     
      <%= f.label :cook %> 
      <%= f.collection_select :cook, Sprovider.all, :id, :uname %>
        </br> </br>
        <%= f.label :customer_id %> 
     <%= f.collection_select :customer_id, Customer.all, :name, :id %>
        </br> </br>
        
        <%= f.label :customer_name %> 
      <%= f.collection_select :customer_name, Customer.all, :id, :name %>
        </br> </br>
        <%= f.label :address %> 
      <%= f.text_field :address, class: 'form-control' %>
        </br> </br>
        
      <%= f.label :starttime %></br>
      <%= f.time_select :starttime, :start_time => Time.now, class: 'form-control'  %>
        </br> </br>
      <%= f.label :endtime %></br>
      <%= f.time_select :endtime, :start_time => Time.now, class: 'form-control'  %>
        </br> </br>
        <%= f.label :totaltime %> 
      <%= f.datetime_local_field :totaltime, class: 'form-control' %>
        </br> </br>
      
      <%= f.label :money %>
      <%= f.number_field :money, class: 'form-control' %>
          </br> </br>

          <%= f.label :paidbycustomer %>
      <%= f.select :paidbycustomer, ['Yes', 'No'] %>
          </br> </br>
       <%= f.label :paidbycook %>
      <%= f.select :paidbycook, ['Yes', 'No'] %>
          </br> </br>
        
       <%= f.label :type %>
      <%= f.select :typere, ['Permanent', 'Temprorary'] %>
          </br> </br>
          <%= f.label :spid %> 
      <%= f.collection_select :spid, Sprovider.all, :uname, :id %>
      </br> </br>
      <%= f.submit "Create account", class: "btn btn-primary" %>
    <% end %>
    <%= link_to "DateView", dataviews_path %>
  </div>

</div>
 