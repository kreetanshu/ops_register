<p id="notice"><%= notice %></p>

<h1>Listing Negative Feedbacks</h1>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Date</th>
      <th>Cook</th>
      <th>Customer</th>
      <th>Feedback</th>
      <th>Remark</th>
      <th>Spid</th>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @negative_feedbacks.each do |negative_feedback| %>
      <tr>
        <td><%= negative_feedback.date %></td>
        <td><%= negative_feedback.cook %></td>
        <td><%= negative_feedback.customer %></td>
        <td><%= negative_feedback.feedback %></td>
        <td><%= negative_feedback.remark %></td>
        <td><%= negative_feedback.spid %></td>
        <td><%= negative_feedback.customer_id %></td>
        <td><%= link_to 'Show', negative_feedback %></td>
        <td><%= link_to 'Edit', edit_negative_feedback_path(negative_feedback) %></td>
        <td><%= link_to 'Destroy', negative_feedback, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

