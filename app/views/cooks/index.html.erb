<h3>Overrall Stats</h3>
 <table class="table table-hover table-condensed"> <thead>
      <tr>
      	
        <th>Cook</th>
        <th>Money Collected</th>
        <th>No of Requests</th>
        <th>Date of Joining</th>
      </tr>
        </thead>
        <tbody> 
        <% @dataviews12.each do |post| %>   
